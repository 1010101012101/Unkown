<!--////////장정환////////-->
	

	
	<servlet><!--서블릿이나 스프링 쓰실분 이런식으로 추가하세요~~  -->
		<servlet-name>hwanDispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/hwan_controller.xml
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>hwanDispatcher</servlet-name>
		<url-pattern>*.hwan</url-pattern>
	</servlet-mapping>
	
		<servlet><!--서블릿이나 스프링 쓰실분 이런식으로 추가하세요~~  -->
		<servlet-name>junDispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/jun_controller.xml
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>junDispatcher</servlet-name>
		<url-pattern>*.jun</url-pattern>
	</servlet-mapping>
	
	
<!-- ////////////////////////// -->	
	

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>